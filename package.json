{
  "name": "ws-messaging",
  "version": "1.0.0",
  "description": "A minimalistic abstraction layer for websockets.",
  "main": "index.js",
  "private": false,
  "scripts": {
    "compile": "babel src --out-dir lib --no-comments",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "prebundle-client": "npm run compile",
    "bundle-client": "browserify -g uglifyify --standalone ws-messaging lib/Client.js -o ws-messaging.min.js",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "generate-docs": "jsdoc --configure .jsdoc.json --verbose",
    "prepare": "npm run bundle-client",
    "pretest": "npm run compile",
    "test": "nyc mocha"
  },
  "keywords": [
    "websocket",
    "websockets",
    "messaging",
    "api",
    "rpc",
    "protocol"
  ],
  "engines": {
    "node": ">=4"
  },
  "author": "Andrey Sharapov <an.sh.1@yandex.ru> (https://github.com/an-sh)",
  "repository": {
    "type": "git",
    "url": "https://github.com/an-sh/ws-messaging.git"
  },
  "license": "MIT",
  "dependencies": {
    "eventemitter3": "^3.0.0",
    "semver": "^5.3.0",
    "uid-safe": "^2.1.2",
    "ws": "^3.3.3"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "browserify": "^15.0.0",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "docdash": "^0.4.0",
    "event-to-promise": "^0.8.0",
    "jsdoc": "^3.4.1",
    "mocha": "^4.1.0",
    "msgpack-lite": "^0.1.20",
    "nyc": "^11.4.1",
    "safe-buffer": "^5.1.1",
    "standard": "^10.0.3",
    "uglifyify": "^4.0.5"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
